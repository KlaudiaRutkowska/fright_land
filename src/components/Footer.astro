---
import LogoFooter from "./LogoFooter.astro";
import Divider from "./Divider.astro";
---

<footer class="bg-dark-purple bg-footer-grass bg-no-repeat before:bg-no-repeat relative before:absolute 
    before:bg-[url('/img/ivy.png')] before:top-[-49px] before:left-[20%] before:w-[191px] before:h-[70px]
    after:absolute after:bg-[url('/img/pumpkins.png')] after:top-[-49px] after:right-[20%] after:w-[201px] after:h-[93px]">
  <div class="container flex flex-col gap-y-20 items-center py-24 font-bold tracking-[-0.36px]">
    <LogoFooter />

    <div class="grid grid-cols-4 gap-8">
        <div class="col-span-1 flex flex-col gap-8 items-center">
            <h2 class="font-creepster text-3xl tracking-[-0.64px]">about fright land</h2>
            <div  class="flex flex-col gap-4 items-center">
                <a href="#0">About us</a>
                <a href="#0">Press</a>
                <a href="#0">Resources</a>
                <a href="#0">Trust & Safety</a>
                <a href="#0">Contact us</a>
            </div>
        </div>

        <div class="col-span-1 flex flex-col gap-8 items-center">
            <h2 class="font-creepster text-3xl tracking-[-0.64px]">explore</h2>
            <div  class="flex flex-col gap-4 items-center">
                <a href="#0">Write a review</a>
                <a href="#0">Add a Place</a>
                <a href="#0">Blog</a>
                <a href="#0">Travelers' Choice</a>
            </div>
        </div>

        <div class="col-span-1 flex flex-col gap-8 items-center">
            <h2 class="font-creepster text-3xl tracking-[-0.64px]">do bussiness with us</h2>
            <div  class="flex flex-col gap-4 items-center">
                <a href="#0">Owners</a>
                <a href="#0">Adventure with us</a>
                <a href="#0">Sponsored Placements</a>
                <a href="#0">Beome a host</a>
            </div>
        </div>

        <div class="col-span-1 flex flex-col gap-8 items-center">
            <h2 class="font-creepster text-3xl tracking-[-0.64px]">support</h2>
            <div class="flex flex-col gap-4 items-center">
                <a href="#0">Terms of Use</a>
                <a href="#0">Privacy & Policy</a>
                <a href="#0">Cookie consent</a>
                <a href="#0">Site map</a>
                <a href="#0">How the site works</a>
            </div>
        </div>
    </div>

    <Divider />

    <div class="flex gap-3 font-bold tracking-[-0.32px]">
        <button class="p-[2px] rounded-2xl bg-gradient-to-r from-[#654AFF] to-[#4F1EE4]">
            <div class="flex items-center px-6 pt-3 pb-4 h-full w-full bg-background-purple rounded-2xl">
                Sign in
                <svg
                    class="stroke-svg-light-purple ml-2 w-5 h-5"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M2 12H14.88"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                    </path>
                    <path
                        d="M12.6504 8.6499L16.0004 11.9999L12.6504 15.3499"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                    </path>
                    <path
                        d="M21.5002 13V15.26C21.5002 19.73 19.7102 21.52 15.2402 21.52H15.1102C11.0902 21.52 9.24016 20.07 8.91016 16.53"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                    </path>
                    <path
                        d="M8.90039 7.55999C9.21039 3.95999 11.0604 2.48999 15.1104 2.48999H15.2404C19.7104 2.48999 21.5004 4.27999 21.5004 8.74999"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                    </path>
                </svg>
            </div>
        </button>

        <button class="flex items-center px-6 pt-[13px] pb-[17px] text-light-pink rounded-2xl bg-gradient-to-r from-[#EC56C9] to-[#9F2A7E] shadow-[0px_5px_50px_0px_rgba(192,57,161,0.25),_-2px_-3px_0px_0px_#802366_inset,3px_2px_0px_0px_#E67ACD_inset]">
            Become a host
            <svg
                class="stroke-svg-light-pink ml-2 w-5 h-5"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                >
                <path
                    d="M15.02 3.01001C14.18 2.37001 13.14 2 12 2C9.24 2 7 4.24 7 7C7 9.76 9.24 12 12 12C14.76 12 17 9.76 17 7"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round">
                </path>
                <path
                    d="M20.5901 22C20.5901 18.13 16.7402 15 12.0002 15C7.26015 15 3.41016 18.13 3.41016 22"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round">
                </path>
            </svg>
        </button>
    </div>

  </div>
</footer>
